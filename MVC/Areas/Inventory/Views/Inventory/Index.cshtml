@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="Container"><div class="row">
    <div class="col-lg-6">
        <h2 class="text-primary">Inventory</h2>
    </div>
    <div class="col-lg-1">
        <a class="btn btn-outline-primary" asp-action="CreateNew"><i class="bi bi-plus-square-fill"></i>Crear</a>
    </div>
    <div class="col-lg-1">
        <a class="btn btn-outline-primary" asp-action="CreateKardex"><i class="bi bi-plus-square-fill"></i>Kardex</a>
    </div>

    <br />
    <div class="p-4 border rounded bg-light">
        <table id="tblData" class="table table-responsive table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Store</th>
                    <th>Product</th>
                    <th>Cost</th>
                    <th>Quantity</th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@section Scripts {
    <script src="~/js/Inventory2.js"></script>
}